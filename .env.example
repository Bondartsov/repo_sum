# === OpenAI Configuration ===
OPENAI_API_KEY=your_openai_api_key_here

# === RAG System Configuration ===
# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_PREFER_GRPC=true
QDRANT_COLLECTION_NAME=repo_sum_v3

# Embedding Model Settings (Jina v3 Migration)
EMB_MODEL_ID=jinaai/jina-embeddings-v3
EMB_TASK_QUERY=retrieval.query
EMB_TASK_PASSAGE=retrieval.passage
EMB_DIM=1024
EMB_POOLING=mean
EMB_L2_NORMALIZE=true
EMB_TRUST_REMOTE_CODE=true

# Legacy FastEmbed Settings (для совместимости)
FASTEMBED_MODEL=BAAI/bge-small-en-v1.5
FASTEMBED_DEVICE=cpu
EMBEDDING_DIMENSION=1024

# Provider Selection
EMBEDDING_PROVIDER=sentence-transformers

# Performance Settings
EMBEDDING_BATCH_SIZE_MIN=8
EMBEDDING_BATCH_SIZE_MAX=128
SEARCH_MAX_RESULTS=10
CACHE_TTL_SECONDS=300

# Threading Configuration
TORCH_NUM_THREADS=4
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Security
RAG_SANITIZE_ENABLED=true
RAG_CONTENT_SCAN_ENABLED=true
